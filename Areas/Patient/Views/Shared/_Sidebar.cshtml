<!-- Brand Logo -->
<div class="brand-link">
    <span class="brand-text font-weight-light"> Dr. Flight Mode</span>
</div>

<!-- Sidebar -->
<div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/Areas/css/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" id="txtUserName" class="d-block"></a>
        </div>
    </div>

    <!-- SidebarSearch Form -->
    <div class="form-inline">
        <div class="input-group" data-widget="sidebar-search">
            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-sidebar">
                    <i class="fas fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
            <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
            <li class="nav-item menu-open">
                <p class="nav-link active">
                    <i class="nav-icon fas fa-tachometer-alt"></i>
                    @Html.ActionLink("Dashboard", "Index", "Default")
                </p>
            </li>

            @* Patients *@
            <li class="nav-item">
                <div class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    <p>
                        Appointments
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </div>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <div class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            @Html.ActionLink("New Appointment", "NewAppointment", "Default")
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            @Html.ActionLink("Follow Up", "FollowUp", "Default")
                        </div>
                    </li>
                </ul>
            </li>
            @* Reports *@
            <li class="nav-item">
                <div class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    <p>
                        Reports
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </div>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <div class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            @Html.ActionLink("Updated Reports", "UpdatedReports", "Default")
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            @Html.ActionLink("Archieved Reports", "ArchievedReports", "Default")
                        </div>
                    </li>
                </ul>
            </li>
            @* Communications *@
            <li class="nav-item">
                <div class="nav-link">
                    <i class="nav-icon far fa-envelope"></i>
                    <p>
                        Communications
                        <i class="fas fa-angle-left right"></i>
                    </p>
                </div>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <div class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            @Html.ActionLink("New Messages", "NewMessages", "Default")
                        </div>
                    </li>
                    <li class="nav-item">
                        <div class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            @Html.ActionLink("Archieved Messages", "ArchievedMessages", "Default")
                        </div>
                    </li>
                </ul>
            </li>
            @* To Do *@
            <li class="nav-item">
                <p class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    @Html.ActionLink("To Do", "Todo", "Default")
                </p>
            </li>

            <li class="nav-item">
                <p class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    @Html.ActionLink("Profile", "UserProfile", "Default")
                </p>
            </li>

            <li class="nav-item">
                <p class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    @Html.ActionLink("Health Feed", "HealthFeed", "Default")
                </p>
            </li>

            <li class="nav-item">
                <p class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    @Html.ActionLink("Feedback", "Feedback", "Default")
                </p>
            </li>

            <li class="nav-item">
                <p class="nav-link">
                    <i class="nav-icon fas fa-book"></i>
                    @Html.ActionLink("Logout", "Logout", "Default")
                </p>
            </li>

        </ul>
    </nav>
    <!-- /.sidebar-menu -->
</div>
